<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/colorBackFragmentNotes"
    android:alpha="0.9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:src="@android:drawable/star_off"
        android:id="@+id/priority_note"
        android:contentDescription="@string/notecard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/noteTitle"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/noteDate"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteEditbtn"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:contentDescription="@string/edit_btn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteDeletebtn"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:contentDescription="@string/delete_btn" />

    </LinearLayout>


</androidx.cardview.widget.CardView>